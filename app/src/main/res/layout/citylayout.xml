<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarforcitylayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/arun3"
                android:scaleType="fitXY"
                android:id="@+id/imageviewcitylayout"
                android:layout_marginBottom="5dp"
                android:layout_height="180dp" />


        <TextView
            android:id="@+id/textviewcitylayout"
            android:layout_width="wrap_content"
            android:text="@string/aboutcitytext1"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:layout_height="1.3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Geography Of the City"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="@color/text"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textviewgeographycitylayout"
            android:text="@string/aboutcitytext2"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
