<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        />
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:src="@drawable/arun"
                android:id="@+id/viewpagerticketall"
                android:layout_height="200dp" >

            </android.support.v4.view.ViewPager>

    <GridLayout
        android:layout_marginTop="14dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:columnCount="2"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp"
            app:cardElevation="6dp"
            android:id="@+id/cardaddress"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="164dp"
                android:orientation="vertical"
                android:id="@+id/linearaddress"
                android:layout_height="155dp">
                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/about"
                    android:layout_gravity="center"
                    android:layout_height="80dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="About Gate"
                    android:textSize="23sp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            android:layout_marginLeft="3dp"
            android:layout_margin="8dp"
            android:id="@+id/cardcity"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="164dp"
                android:orientation="vertical"
                android:layout_height="155dp">
                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/citychurchh"
                    android:layout_gravity="center"
                    android:layout_height="80dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Arrival City"
                    android:textSize="23sp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            app:cardElevation="6dp"
            android:id="@+id/cardservice"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="164dp"
                android:orientation="vertical"
                android:layout_height="155dp">
                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/faqs"
                    android:layout_gravity="center"
                    android:layout_height="80dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Protocol"
                    android:textSize="23sp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/cardticket"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="164dp"
                android:orientation="vertical"
                android:layout_height="155dp">
                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ticketwithman"
                    android:layout_gravity="center"
                    android:layout_height="80dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Click to Cut Ticket"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </GridLayout>


</LinearLayout>
