<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/clicklayoutfragent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:src="@drawable/arun3"
            android:scaleType="fitXY"
            android:id="@+id/imageviewforfragmenttwo"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="မိုးကုတ္"
            android:padding="8dp"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:id="@+id/textviewforfragmenttwo"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/imageviewforfragmenttwo"
            android:layout_alignLeft="@+id/imageviewforfragmenttwo"
            android:layout_alignStart="@+id/imageviewforfragmenttwo" />
    </RelativeLayout>


</android.support.v7.widget.CardView>