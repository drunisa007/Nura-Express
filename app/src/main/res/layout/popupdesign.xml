<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:cardElevation="7dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/adver2"
                android:scaleType="fitXY"
                android:layout_height="160dp"
                android:id="@+id/imageviewatmcard"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Account Name   "
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:text="Chan Myae Thu"
        android:id="@+id/textviewusernamepopup"
        android:textStyle="italic"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"

        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Account Id"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="1234 5678 9123 4567"
            android:textStyle="italic"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
         android:layout_marginTop="20dp"
    android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Balance"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="0 Kyats"
            android:id="@+id/textviewbalancepopup"
            android:textStyle="italic"
            android:textColor="#3d5afe"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_marginTop="30dp"
        android:text="Top Up Account"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/topupbutton"
        android:background="@drawable/layout1"
        android:layout_height="100dp" />

</LinearLayout>
